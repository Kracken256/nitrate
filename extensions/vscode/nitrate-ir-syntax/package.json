{
  "name": "nitrate-ir-syntax",
  "displayName": "Nitrate IR: Syntax Highlighting",
  "publisher": "nitrate",
  "description": "Syntax highlighting support for the Nitrate Language intermediate representation (IR) files.",
  "version": "1.0.0",
  "repository": "https://github.com/Kracken256/nitrate/extensions/vscode/nitrate-ir-syntax",
  "icon": "./icons/icon-light.png",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nitrate-ir",
        "aliases": [
          "Nitrate IR"
        ],
        "extensions": [
          ".nr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nitrate-ir",
        "scopeName": "source.nr",
        "path": "./syntaxes/nitrate-ir.tmLanguage.json"
      }
    ]
  }
}